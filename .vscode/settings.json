{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "astro", // Enable .astro
        "typescript", // Enable .ts
        "typescriptreact" // Enable .tsx
    ],
    "prettier.documentSelectors": [
        "**/*.astro"
    ],
    "[astro]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cSpell.words": [
        "astro",
        "catppuccin",
        "daisyui",
        "tailwindcss",
        "typog"
    ],
    "files.associations": {
        "*.mdx": "markdown"
    },
}
