---
import { Image } from '@astrojs/image/components';
const {
	source = import('~/assets/images/demo/logo.png'),
	width = '95',
	height = '95',
	alt = '',
	brand = false,
	classes = 'brand-logo brand align-middle block dark:invert',
	brandClasses = 'brand-text brand block align-middle mt-4',
} = Astro.props;
/* add switch for title default to site title and allow another title to be site and switch for wrapper then this can be resused for associate logos too of course url must be prop also */
---

<span
	class="branding ml-2 flex self-center whitespace-nowrap align-middle font-extrabold text-crust-700 text-2xl dark:text-white"
>
	<Image src={source} width={width} height={height} alt={alt} class={classes} />
	{brand && <span class={brandClasses}>{brand}</span>}
</span>
