---
import '@pkg/@glidejs/glide/dist/css/glide.core.css';
import '@pkg/@glidejs/glide/dist/css/glide.theme.css';

const { id = 'glideShow', class: className = 'glide' } = Astro.props;
---

<div {id} class={className}>
	<div class="glide__track" data-glide-el="track">
		<ul class="glide__slides">
			<slot />
		</ul>
	</div>
	<slot name="ctrl" />
	<slot name="style" />
</div>

<style>
	.glide {
		width: 100%;
	}
</style>
<script>
	import Glide from '../../../../node_modules/@glidejs/glide/dist/glide.esm.js';
	new Glide('.glide').mount();
</script>
