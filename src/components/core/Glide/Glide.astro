---
import path from "node:path";
import '~/assets/css/glide.core.css';
import '~/assets/css/glide.theme.css';

interface Props {
  id?: string;
  class?: string;
}

// @todo add id object
const { id = "glideShow", class = "glide" } = Astro.props;
---

<div {id} {class}>
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
      <slot />
    </ul>
  </div>
  <slot name="ctrl" />
  <slot name="style" />
</div>


<style>
  .glide {
    width: 100%;
  }
</style>

<script>

import Glide from 'node_modules/@glidejs/glide/dist/glide.esm.js';

// glide setup here

  new Glide('.glide').mount()

</script>
