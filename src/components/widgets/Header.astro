---
import { Icon } from 'astro-icon';
import Logo from '~/components/atoms/Logo.astro';
import ToggleTheme from '~/components/core/ToggleTheme.astro';
import ToggleMenu from '~/components/core/ToggleMenu.astro';

import { getHomePermalink, getBlogPermalink, getPermalink, getRelativeLink } from '~/utils/permalinks';
---

<header
	class="sticky top-0 z-40 mx-auto w-full flex-none border-b bg-white dark:border-b-0 dark:bg-mantle-700 md:bg-white/90 md:backdrop-blur-sm dark:md:bg-mantle-700/90"
	id="header"
>
	<div class="mx-auto w-full max-w-6xl py-3 px-3 md:flex md:justify-between md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href={getHomePermalink()}>
				<Logo brand="ayame6" src={import('~/assets/images/demo/logo.png')} />
			</a>
			<div class="flex items-center md:hidden">
				<ToggleTheme />
				<ToggleMenu />
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex  text-mantle-600 dark:text-mauve-400 h-[calc(100vh-100px)] md:h-auto overflow-y-auto md:overflow-visible"
			aria-label="Main navigation"
		>
			<ul class="flex w-full flex-col pt-8 text-xl md:w-auto md:flex-row md:self-center md:pt-0 md:text-base">
				<li>
					<a
						class="dark:hover:text-mauve-400 dark:text-mauve-200 flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-mantle-600"
						href="#">Pages</a
					>
					<ul
						class="dropdown-menu rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white md:min-w-[200px] dark:md:bg-slate-800 drop-shadow-xl"
					>
						<li class="">
							<a
								class="rounded-t md:hover:bg-mantle-400 dark:hover:bg-mantle-700 py-2 px-4 block whitespace-no-wrap"
								href="#">Features</a>
						</li>
						<li class="">
							<a class="md:hover:bg-mantle-400 dark:hover:bg-mantle-700 py-2 px-4 block whitespace-no-wrap" href="#"
								>Profile</a>
						</li>
						<li class="">
							<a
								class="rounded-b md:hover:bg-mantle-400 dark:hover:bg-mantle-700 py-2 px-4 block whitespace-no-wrap"
								href="#">Pricing</a>
						</li>
					</ul>
				</li>
				<li>
					<a
						class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-mantle-600 dark:hover:text-mauve-400 dark:text-mauve-200"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Resources
					</a>
				</li>
				<li>
					<a
						class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-mantle-600 dark:hover:text-mauve-400 dark:text-mauve-200"
						href={getBlogPermalink()}>Blog</a
					>
				</li>
				<li class="md:hidden">
					<a
						class="flex items-center px-4 py-3 font-bold transition duration-150 ease-in-out hover:text-mantle-600 dark:hover:text-white"
						href="https://github.com/ss77a/ayame"
						>Github
					</a>
				</li>
			</ul>
			<div class="mb-4 ml-2 flex items-center md:mb-0 md:self-center">
				<div class="hidden items-center md:flex">
					<ToggleTheme iconClass="w-5 h-5" />
					<a
						class="inline-flex items-center rounded-lg p-2.5 text-mauve-500 text-sm hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:text-mauve-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
						aria-label="RSS Feed"
						href="/rss.xml"
					>
						<Icon name="tabler:rss" class="w-5 h-5" />
					</a>
					<a
						href="https://github.com/ss77a/ayame"
						class="inline-block rounded-lg p-2.5 text-mauve-500 text-sm hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:text-mauve-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
						aria-label="ayame Github"
					>
						<Icon name="tabler:brand-github" class="w-5 h-5" />
					</a>
				</div>
			</div>
		</nav>
	</div>
</header>
