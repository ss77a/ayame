---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

const { meta } = Astro.props;
---

<Layout {meta}>
	<Announcement />
	<Header />
	<main>
		<slot />
	</main>
	<Footer>
		<span
			class="float-left mr-1.5 h-5 w-5 rounded-sm bg-[url(https://onwidget.com/favicon/favicon-32x32.png)] bg-cover md:-mt-0.5 md:h-6 md:w-6"
		>
		</span>
		Made by <a class="text-sky-600 hover:underline dark:text-mauve-200" href="https://ayame6.vercel.app/">onwidget</a> Â·
		All rights reserved.
	</Footer>
</Layout>
